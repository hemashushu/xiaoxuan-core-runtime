import fn module::base::add(i32,i32)->i32

// returns `xy + z`
pub fn muladd(x:i32, y:i32, z:i32) -> i32 {
    add_i32(
        mul_i32(
            local_load_i32_s(x)
            local_load_i32_s(y)
        )
        local_load_i32_s(z)
    )
}