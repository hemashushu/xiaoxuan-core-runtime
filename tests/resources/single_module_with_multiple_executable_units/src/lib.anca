// returns `left + right`
pub fn add(left:i32, right:i32) -> i32 {
    add_i32(
        local_load_i32_s(left)
        local_load_i32_s(right)
    )
}

// returns `left - right`
pub fn subtract(left:i32, right:i32) -> i32 {
    sub_i32(
        local_load_i32_s(left)
        local_load_i32_s(right)
    )
}

// returns `left * right`
pub fn multiply(left:i32, right:i32) -> i32 {
    mul_i32(
        local_load_i32_s(left)
        local_load_i32_s(right)
    )
}

// returns `left / right`
pub fn divide(left:i32, right:i32) -> i32 {
    div_i32_s(
        local_load_i32_s(left)
        local_load_i32_s(right)
    )
}